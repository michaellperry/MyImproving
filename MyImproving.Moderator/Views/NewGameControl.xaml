<UserControl x:Class="MyImproving.Moderator.Views.NewGameControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">
	<UserControl.Resources>
		<DataTemplate x:Key="CompanyHeaderViewModelTemplate">
			<CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}" Content="{Binding Name}"/>
		</DataTemplate>
	</UserControl.Resources>
    
    <Grid x:Name="LayoutRoot" Background="White" d:DataContext="{d:DesignData /SampleData/NewGameViewModelSampleData.xaml}">
    	<Grid.RowDefinitions>
    		<RowDefinition/>
    		<RowDefinition Height="Auto"/>
    	</Grid.RowDefinitions>
    	<ListBox Margin="8" ItemTemplate="{StaticResource CompanyHeaderViewModelTemplate}" ItemsSource="{Binding Companies}"/>
    	<Button Content="Begin Game" Width="75" HorizontalAlignment="Left" Margin="8,8,0,8" Grid.Row="1" Command="{Binding BeginGame}"/>

    </Grid>
</UserControl>
